
 <div class="col-sm-12 col-12 col-md-6 col-lgl4 col-xl-3 mb-4 px-2">
  <div class="card mx-auto text-center bg-dark make-bigger h-100">
      <div class="row">
            <div class="col-6">
            <h5 class="card-title border-white text-white p-3">{{user_name}}</h5>
            </div>
            <div class="col-6">
            <a href="http://github.com/{{github_name}}" target="_blank"><i class="fa-brands fa-github fa-lg github m-4"></i></a>
            <a href="mailto:{{email}}"><i class='fas fa-envelope fa-lg mail m-4'></i></a></div>
      </div>
        <div class="row g-0"> 
            <div class="col-5">
                <h6 class="card-subtitle mb-2 text-muted">Strengths</h6>
                <ul class="langlist fs-6">
                    {{#each user_languages as |language|}}
                    <li class="text-white">{{language.language_name}}</li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-7">
                <h6 class="card-subtitle mb-2 ml-0 text-muted">Compabitility</h6>
                <ul class="compatlist text-white fs-6 text-align-left">
                      <li>Personality: {{personal_compatibility}}</li>
                      <li>Professional: {{work_compatibility}}</li>
                      <li>Technical: {{language_compatibility}}</li>
                </ul>
                
                {{!-- change code below to change card link --}}
                <a href="/user/{{id}}" class="stretched-link"></a>
            
            </div>
          </div>
    </div>
  </div>

